<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_activity"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="158dp"
        android:layout_height="43dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/special_request"
        android:maxWidth="43dp"
        android:maxHeight="200dp"
        android:text="@string/gioco_prova"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:fontFamily="@font/special_request"
        app:layout_constraintBottom_toTopOf="@+id/btnPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="203dp"
        android:layout_height="75dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/rounded_button"
        android:text="@string/play"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btnOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    <Button
        android:id="@+id/btnOptions"
        android:layout_width="208dp"
        android:layout_height="77dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/rounded_button"
        android:text="@string/options"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btnShop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPlay" />

    <Button
        android:id="@+id/btnShop"
        android:layout_width="208dp"
        android:layout_height="83dp"
        android:layout_marginBottom="109dp"
        android:background="@drawable/rounded_button"
        android:text="@string/shop"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOptions" />

</android.support.constraint.ConstraintLayout>

